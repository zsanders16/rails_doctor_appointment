<h1>Doctors</h1>

<% if @doctors.empty? %>
    <div class='bg-primary'>
        <h3>There are no Doctors, please create one.</h3>
    </div>
<% else %>
    <div class="table-responsive">
        <table class="table table-striped">
            <tr>
                <th>Doctor</th>
                <th>Specialty</th>
                <th colspan="3"></th>
            </tr>
            <% @doctors.each do |doctor| %>
                <tr>
                    <td><%= doctor.name %></td>
                    <td><%= doctor.specialty %></td>
                    <td><%= link_to 'Show', doctor, class: 'btn btn-primary' %></td>
                    <td><%= link_to 'Edit', edit_doctor_path(doctor), class: 'btn btn-primary' %></td>
                    <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
                </tr>
            <% end %>
            
        </table>
    </div>
<% end %>

<%= link_to 'Create New Doctor', new_doctor_path, class: 'btn btn-primary' %>

