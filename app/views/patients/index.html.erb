<h1>Patients</h1>

<% if @patients.empty? %>
    <div class='bg-primary'>
        <h3>There are no Patients, please create one.</h3>
    </div>
<% else %>
    <div class="table-responsive">
        <table class="table table-striped">
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th colspan="3"></th>
            </tr>
            <% @patients.each do |patient| %>
                <tr>
                    <td><%= patient.name %></td>
                    <td><%= patient.age %></td>
                    <td><%= patient.gender %></td>
                    <td><%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-primary' %></td>
                    <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
                </tr>
            <% end %>
            
        </table>
    </div>
<% end %>

<%= link_to 'Create New Patient', new_patient_path, class: 'btn btn-primary' %>
